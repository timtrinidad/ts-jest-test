// Typescript doesn't mind comments in this json file
{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveSymlinks": true,
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "noEmit": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
